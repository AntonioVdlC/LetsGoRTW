<style type="text/css">
    .slideshow {
        position: relative;
        width: 100%;
        height: 100%; 
    }

    .slideshow figure {
        top: -16px;
        right: auto;
        bottom: auto;
        left: -40px;
        position: absolute;
        opacity: 0;
        filter: alpha(opacity=0);
        height: 100%;
        width: 100%; 
    }
    .slideshow figure img {
      width: 100%;
      height: 100%; 
    }

    .slideshow figure:nth-child(1) {
        animation: xfade 60s 50s infinite; 
    }
    .slideshow figure:nth-child(2) {
        animation: xfade 60s 40s infinite; 
    }
    .slideshow figure:nth-child(3) {
        animation: xfade 60s 30s infinite; 
    }
    .slideshow figure:nth-child(4) {
        animation: xfade 60s 20s infinite; 
    }
    .slideshow figure:nth-child(5) {
        animation: xfade 60s 10s infinite; 
    }
    .slideshow figure:nth-child(6) {
        animation: xfade 60s 0s infinite; 
    }

    @keyframes xfade {
        0% {
            opacity: 1;
        }

        18% {
            opacity: 1;
        }

        20% {
            opacity: 0;
        }

        98% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        } 
    }
</style>